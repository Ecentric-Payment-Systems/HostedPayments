<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    <base href="@Url.Content("~/")" />
</head>
<body ng-app="payment">
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Ecentric Ecommerce Solution", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li uib-dropdown>
                        <a uib-dropdown-toggle>Hosted Payment Solution</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Using old School Post Request", "Index", "Hosted")</li>
                            <li>@Html.ActionLink("Using jquery and api controllers", "Jquery", "Hosted")</li>
                            <li>@Html.ActionLink("Using angularjs and api controllers", "Angular", "Hosted")</li>
                        </ul>
                    </li>

                    <li>
                    <li uib-dropdown>
                        <a uib-dropdown-toggle>Payment Lightbox Solution</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Using old School Post Request", "Index", "Lightbox")</li>
                            <li>@Html.ActionLink("Using jquery and api controllers", "Jquery", "Lightbox")</li>
                            <li>@Html.ActionLink("Using angularjs and api controllers", "Angular", "Lightbox")</li>
                        </ul>
                    </li>
                    <li uib-dropdown>
                        <a uib-dropdown-toggle>Ecentric Wallet Solution</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Manage Wallet", "Index", "Wallet")</li>
                            <li>@Html.ActionLink("Add Card", "AddCard", "Wallet")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    <footer class="navbar navbar-default navbar-fixed-bottom">
        <div class="container">
            <hr />
            <p>&copy; @DateTime.Now.Year -Ecentric Payment Systems</p>
        </div>
    </footer>
    @System.Web.Optimization.Scripts.Render("~/bundles/scripts")
    <script type="text/javascript">
        angular.module('payment', ['ui.bootstrap'])
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
