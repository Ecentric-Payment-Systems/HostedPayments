@{
    ViewBag.Title = "Ecentric Payment";
}

<div class="jumbotron">
    <h1>Ecentric Payments</h1>
    <p class="lead">Code Sample for using the Ecentric Payment Lightbox</p>
</div>

<div class="panel">
    <div class="panel-body">
        <div class="form-group">
            <h3 class="text-info">
                Ecentric Payments offers 3 Payment Options:
            </h3>
            <ol>
                <li>
                    <h4 class="text-muted">Hosted Payment Solution <a href="@Url.Action("Index","Hosted")" target="_blank"><span class="glyphicon glyphicon-new-window"></span></a></h4>
                    <p class="text-info">Performs a post to Ecentric Hosted Payment Page</p>
                </li>
                <li>
                    <h4 class="text-muted">Payment Lightbox Solution <a href="@Url.Action("Index","Lightbox")" target="_blank"><span class="glyphicon glyphicon-new-window"></span></a></h4>
                    <p class="text-info">overlays an Iframe window over current page</p>
                    
                </li>
                <li><h4 class="text-muted">Payment Api Solution</h4></li>
            </ol>
        </div>

        <div class="form-group">
            <h3 class="text-info">
                Wallet Options:
            </h3>
            <ol>
                <li>
                    <h4 class="text-muted">Ecentric Wallet - Manage <a href="@Url.Action("Index","Wallet")" target="_blank"><span class="glyphicon glyphicon-new-window"></span></a></h4>
                    <p class="text-info">Manage Wallet</p>
                </li>

                <li>
                    <h4 class="text-muted">Ecentric Wallet - Add Card <a href="@Url.Action("AddCard","Wallet")" target="_blank"><span class="glyphicon glyphicon-new-window"></span></a></h4>
                    <p class="text-info">Add Card to wallet</p>
                </li>
            </ol>
        </div>
    </div>
</div>

